<% if (!results.length) { %>
<div class="d-flex flex-row justify-content-center h-100">
    <div class="d-flex flex-column justify-content-center w-50 fadeslide">
        <div class="pb-5 d-flex flex-row justify-content-center">
            <h3 class="display-3">Find Friends!</h3>
        </div>
        <form class="input-group rounded" method="post" action="/findfriends">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                aria-describedby="search-addon" name="query" />
            <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
            </span>
        </form>
    </div>
</div>
<% } else { %>
<div class="d-flex flex-column pt-3 h-100 align-items-center">
    <div class="d-flex flex-column w-50">
        <form class="input-group rounded pb-5" method="post" action="/findfriends">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                aria-describedby="search-addon" name="query" />
            <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
            </span>
        </form>
    </div>
    <div class="d-flex flex-wrap justify-content-center text-center users-scroll" style="max-height: 70vh;">
        <% if (!!results[0]) { %>
        <% results.forEach(result => { %>
        <div class="p-4">
            <%- include('../partials/friendcard.ejs', {user: result}) %>
        </div>
        <% }) %>
        <% } else { %>
            <h5 class="display-6">Sorry, no results were returned for that search</h5>
        <% } %>
    </div>
</div>
<% } %>