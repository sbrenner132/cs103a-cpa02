<div class="d-flex flex-column align-items-center">
    <h1 class="display-1 pt-2 pb-4">Browse Books</h1>
    <div class="w-50">
        <form class="input-group rounded" action="/browse" method="get">
            <input type="search" class="form-control rounded" placeholder="Search By Title" aria-label="Search"
                aria-describedby="search-addon" name="query" />
            <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
            </span>
        </form>
    </div>
    <div class="d-flex flex-column align-items-start w-100 ps-5 pt-5">
        <h1 class="display-6 pb-2">Private Books By Friends</h1>
        <div class="d-flex flex-row w-100" style="padding-left: 300px;">
            <% for (let book of sharedPrivateBooks) { %>
            <div class="" style="padding-right: 300px;">
                <%- include('../partials/bookcard.ejs', {book, author: book.author}) %>
            </div>
            <% } %>
        </div>
    </div>
    <div class="d-flex flex-column align-items-start w-100 ps-5 pt-5">
        <h1 class="display-6 pb-2">Public Books</h1>
        <div class="d-flex flex-row w-100" style="padding-left: 300px;">
            <% for (let book of publicBooks) { %>
            <div class="" style="padding-right: 300px;">
                <%- include('../partials/bookcard.ejs', {book, author: book.author}) %>
            </div>
            <% } %>
        </div>
    </div>
</div>