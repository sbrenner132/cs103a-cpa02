<div class="d-flex flex-column p-4" style="flex: 1">
  <div class="d-flex flex-row justify-content-center pb-3" style="flex: 1">
    <p class="display-3">Notifications and Status Hub</p>
  </div>
  <div class="d-flex flex-row ps-3 pe-3 h-100" style="flex: 3">
    <div class="d-flex flex-column" style="flex: 1">
      <div class="card rounded shadow">
        <div class="card-header text-center">
          <h5 class="card-title">General Notification Log</h5>
        </div>
        <div class="card-body">
          <% if (notifs.length) { %> <% notifs.forEach(notif => { %>
          <div class="d-flex flex-row p-1">
            <div class="text-muted" style="flex: 1">
              <%= notif.timeSince() %>
            </div>
            <div class="text-wrap" style="flex: 3">
              <%= notif.clientMessage %>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p class="text-center">
            Sorry, it doesn't look like you have any action items!
          </p>
          <% } %>
        </div>
      </div>
    </div>
    <div class="d-flex flex-column ps-3 pe-3 pb-2" style="flex: 1;">
      <p class="display-6 text-center">Incoming Requests</p>
      <% if (requests.length) { %>
      <div class="requests-scroll">
        <% requests.forEach(request => { %> <%-
        include('../partials/incomingrequestcard.ejs', {request}) %> <%
        }) %>
      </div>
      <% } else { %>
      <p class="text-center">
        Nothing to show here! Maybe spread awareness for our site to your
        friends so you can match here!
      </p>
      <% } %>
    </div>
    <div class="d-flex flex-column ps-3" style="flex: 1">
      <p class="display-6 text-center pb-2">Outgoing Requests</p>
      <% if (outgoing.length) { %>
        <div class="requests-scroll">
          <% outgoing.forEach(outgoing => { %> <%-
          include('../partials/outgoingrequestcard.ejs', {outgoing}) %> <%
          }) %>
        </div>
        <% } else { %>
        <p class="text-center">
          Nothing to show here! Try <a href="/findfriends">adding a friend</a> to get something here!
        </p>
        <% } %>
    </div>
  </div>
</div>
